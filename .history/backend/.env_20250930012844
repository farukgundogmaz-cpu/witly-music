# Server Configuration
PORT=3000
NODE_ENV=development

# PocketBase Configuration
POCKETBASE_URL=https://api1.witlydesign.com
POCKETBASE_ADMIN_EMAIL=admin@witlydesign.com
POCKETBASE_ADMIN_PASSWORD=your_admin_password_here

# Music API Keys (Manuel olarak kayıt yapıp alınacak)
DEEZER_API_KEY=your_deezer_api_key_here
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
LASTFM_API_KEY=your_lastfm_api_key_here

# JWT Secret (Güvenlik için)
JWT_SECRET=your_jwt_secret_key_here

# Cache Configuration
CACHE_TTL=3600
